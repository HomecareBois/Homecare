@model IEnumerable<Homecare.Models.DataModels.Route>


@{
    ViewBag.Title = "Home Page";
}



<div class="row front-row">
    <div class="col-md-5 front-col">
        <h2>Nyheder</h2>
        <p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Overskrift</th>
                        <th>Dato</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Billeder fra årets julefrokost</td>
                        <td>03-01-2018</td>
                    </tr>
                    <tr>
                        <td>Husk nu leverdrengen GITTE!!</td>
                        <td>20-12-2017</td>
                    </tr>
                    <tr>
                        <td>Vær sød at huske leverdrengen Gitte :)</td>
                        <td>12-12-2017</td>
                    </tr>
                </tbody>
            </table>
        </p>
    </div>
    <div class="col-md-6 front-col">
        <h2>Ruter</h2>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Caretaker.caretaker_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Caretaker.caretaker_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.ActionLink("Se rute", "Index", "Routes", new { id = item.id_route }, null)
                    </td>
                </tr>
            }

        </table>


    </div>
</div>